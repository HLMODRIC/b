<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    style="@style/me_common_item_relativeLayout_style"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/txt_item_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:drawableLeft="@mipmap/item_list_text"
        android:drawableStart="@mipmap/item_list_text"
        android:text="@string/tab_menu_home"
        android:textSize="@dimen/textSize_15"
        android:textColor="@color/bg_black"
        android:drawableRight="@mipmap/item_list_right"
        android:drawableEnd="@mipmap/item_list_right"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@color/div_white"/>
</RelativeLayout>




