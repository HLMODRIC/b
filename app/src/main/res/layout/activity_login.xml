<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
               xmlns:tools="http://schemas.android.com/tools"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:paddingBottom="@dimen/activity_vertical_margin"
               android:paddingLeft="@dimen/activity_horizontal_margin"
               android:paddingRight="@dimen/activity_horizontal_margin"
               tools:context=".Activity.SplashActivity"
               android:orientation="vertical"
               android:gravity="center">


    <TextView
        android:id="@+id/tv_login_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_tv_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSize_25"
        android:gravity="center"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginTop="30dip"
        android:hint="@string/login_ev_username"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:singleLine="true"
        android:maxLength="30"
        android:textColorHighlight="#7e4d84"
        android:ellipsize="end"
        android:gravity="center_vertical"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginTop="30dip"
        android:hint="@string/login_ev_password"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:text="@string/loin_btn_login"
        android:gravity="center"
        android:background="@drawable/btn_bottom_confirm_bg"
        />

</LinearLayout>
