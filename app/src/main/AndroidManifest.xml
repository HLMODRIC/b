<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hl.AFCHelper">

    <application android:theme="@style/AppTheme"
                 android:label="@string/app_name"
                 android:icon="@mipmap/ic_launcher_round">


        <activity android:theme="@style/AppTheme"
                  android:name="com.hl.AFCHelper.Activity.MainActivity"
                  android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:theme="@style/AppTheme"
                  android:name="com.hl.AFCHelper.Activity.ListActivity"
                  android:configChanges="orientation|screenSize">
        </activity>
        <activity android:theme="@style/AppTheme"
                  android:name="com.hl.AFCHelper.Activity.ContentActivity"
                  android:configChanges="orientation|screenSize">
        </activity>
        <activity
            android:name="com.hl.AFCHelper.ImageViewPager.ImagePagerActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name="com.hl.AFCHelper.Activity.SeachDataActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>

    </application>
</manifest>
