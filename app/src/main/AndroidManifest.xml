<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hl.b">

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:theme="@style/AppTheme" android:label="@string/app_name"
                 android:icon="@mipmap/ic_launcher" android:allowBackup="true">


        <activity android:theme="@style/Theme.AppCompat.NoActionBar"
                  android:label="@string/app_name" android:name=".Activity.MainActivity"
                  android:configChanges="orientation"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:theme="@style/Theme.AppCompat.NoActionBar"
                  android:label="@string/app_name" android:name=".Activity.ListActivity"
                  android:configChanges="orientation">
        </activity>
        <activity android:theme="@style/Theme.AppCompat.NoActionBar"
                  android:label="@string/app_name" android:name=".Activity.ContentActivity"
                  android:configChanges="orientation">
        </activity>
        <activity
            android:name=".ImageViewPager.ImagePagerActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>

    </application>
</manifest>
